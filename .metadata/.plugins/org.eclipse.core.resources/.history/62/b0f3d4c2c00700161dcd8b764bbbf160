import java.io.InputStream;
import java.io.OutputStream;
import java.util.concurrent.TimeUnit;


public class PythonRunnerFramework {
	public static void runFile(String filename, String input, String expectedOutput) {
		runFile(filename, "C:\\Python34\\python.exe", input, expectedOutput);
	}
	
	public static void runFile(String filename, String pythonPath, String input, String expectedOutput) {
		try {
			Process p = Runtime.getRuntime().exec(pythonPath+" "+filename);
			OutputStream in = p.getOutputStream();
			InputStream out = p.getInputStream();
			System.out.println(input);
			in.write((input+"\n").getBytes());
			boolean timeout = p.waitFor(1, TimeUnit.SECONDS);
			if (timeout == false) {
				System.out.println("ran outta time");
			}
			
			
			String s = "";
			int n;
			while ((n = out.read()) != -1)
			    s += (char)n;
			System.out.println(s);
			
		} catch (Exception e) {
			e.printStackTrace();
		}
	}
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		runFile("test.py","wei\n","hello");
	}

}
